<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingLeft="25dp"
    android:paddingRight="5dp"
    android:paddingTop="15dp"
    tools:context=".registration_emp1"
    android:id="@+id/r3">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/fname"
            android:layout_width="330dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/"
            android:hint="First Name"
            android:paddingBottom="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:textAllCaps="false"
            android:textColor="#2d2727"
            android:textSize="17dp"
            android:layout_marginBottom="380dp"/>
        <EditText   android:id="@+id/mname"
            android:layout_width="330dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/"
            android:hint="Middle Name"
            android:paddingBottom="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:textAllCaps="false"
            android:textColor="#2d2727"
            android:textSize="17dp"
            android:layout_marginBottom="330dp"
            />

        <EditText
            android:id="@+id/lname"
            android:layout_width="330dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/"
            android:hint="Last Name"
            android:paddingBottom="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:textAllCaps="false"
            android:textColor="#2d2727"
            android:textSize="17dp"
            android:layout_marginBottom="280dp"
            />

    <EditText
        android:id="@+id/dob"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/fname"
        android:layout_marginBottom="230dp"
        android:fontFamily="@font/"
        android:hint="Date Of Birth"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:textAllCaps="false"
        android:textColor="#2d2727"
        android:textSize="17dp" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/gender"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:layout_alignEnd="@+id/fname"
        android:layout_alignTop="@+id/dob"
        android:entries="@array/gender"
        android:layout_marginBottom="230dp"
        android:autofillHints="@string/gender"/>

    <Button
        android:id="@+id/cancle"
        android:layout_width="156dp"
        android:layout_height="46dp"
        android:layout_alignStart="@+id/fname"
        android:layout_alignTop="@+id/next"
        android:layout_marginStart="4dp"
        android:background="@drawable/round"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:text="Cancle"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="16dp" />

    <Button
        android:id="@+id/next"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:layout_alignEnd="@+id/fname"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/round"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:text="Next"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="135dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="80dp"
        android:text="Already registred?"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="114dp"
        android:autoLink="all"
        android:linksClickable="true"
        android:text="@string/s"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textStyle="bold" />

    </ScrollView>

</RelativeLayout>